<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity"
        android:background="#00BCD4">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText_login_mail"
            android:background="@drawable/rounded_edittext"
            android:textSize="16sp"
            android:textStyle="bold"
            android:hint="Email"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="266dp"
            app:layout_constraintTop_toTopOf="parent" android:paddingStart="20sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText_login_password"
            android:background="@drawable/rounded_edittext"
            android:textSize="16sp"
            android:textStyle="bold"
            android:hint="Şifre"
            app:layout_constraintEnd_toEndOf="@+id/editText_login_mail"
            app:layout_constraintStart_toStartOf="@+id/editText_login_mail"
            app:layout_constraintTop_toBottomOf="@+id/editText_login_mail" android:layout_marginTop="8dp"
            android:paddingStart="20sp"/>

    <Button
            android:text="Giriş Yap"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/login_button_login"
            android:background="@drawable/rounded_button"
            app:layout_constraintStart_toStartOf="@+id/editText_login_password"
            app:layout_constraintEnd_toEndOf="@+id/editText_login_password" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editText_login_password"/>

    <Button
            android:text="Kayıt Ol"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:id="@+id/register_button_login"
            android:backgroundTint="@color/colorButton"
            android:background="@drawable/rounded_button" app:layout_constraintEnd_toEndOf="@+id/login_button_login"
            app:layout_constraintStart_toStartOf="@+id/login_button_login"
            app:layout_constraintTop_toBottomOf="@+id/login_button_login" android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>